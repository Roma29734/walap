<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Walap" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/mainBlackRound</item>
        <item name="android:navigationBarColor">@color/mainBlackRound</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/mainBlackRound</item>
        <!-- Customize your theme here. -->
    </style>


    <!--    TextView-->

    <style name="textViewTitleMain" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/mainYellowAccent</item>
        <item name="android:textSize">23sp</item>
    </style>
    <!--    -->


<!--    CardView-->

    <style name="cardViewMainImageView" parent="CardView" >
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:tint">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">32dp</item>
    </style>


    <style name="cardViewCategoriesList" parent="CardView" >
        <item name="android:backgroundTint">@color/secondBlackRound</item>
        <item name="android:tint">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">32dp</item>
    </style>

<!--    -->

<!--    More-->
    <style name="bottomNavView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/mainBlackRound</item>
        <item name="itemIconTint">@color/bottom_nav_ic_black</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>
<!--    -->
</resources>