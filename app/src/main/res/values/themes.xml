<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Walap" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>


<!--    cardView-->

    <style name="cardViewProfileMain" parent="CardView">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:tint">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>

    <style name="cardViewMainImageView" parent="CardView" >
        <item name="android:backgroundTint">@color/mainBlackRound</item>
        <item name="android:tint">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">32dp</item>
    </style>

    <style name="cardViewCategoriesList" parent="CardView" >
        <item name="android:backgroundTint">@color/mainBlackRound</item>
        <item name="android:tint">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">32dp</item>
    </style>

    <style name="cardViewForLogo" parent="CardView" >
        <item name="android:backgroundTint">@color/mainBlackRound</item>
        <item name="android:tint">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">120dp</item>
    </style>

<!--    -->

<!--    TextView-->

    <style name="textViewTitleMain" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/mainRedWhiteAccent</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="textViewOneColorWhite" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/mainLightGreyAccent</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="textViewOneColorYellow" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/mainYellowAccent</item>
        <item name="android:textSize">23sp</item>
    </style>

<!--    -->

<!--    MaterialButton-->

    <style name="mainMaterialButton" parent="Widget.MaterialComponents.Button" >
        <item name="cornerRadius">25dp</item>
        <item name="android:backgroundTint">@color/mainYellowAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginEnd">64dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

<!--    -->

<!--    ImageButton-->

    <style name="imgButtonBack" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
<!--        <item name="android:tint">@color/mainBlack</item>-->
    </style>

<!--    -->

<!--    More-->

    <style name="bottomNavView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/bottom_nav_ic</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

<!--    -->

</resources>